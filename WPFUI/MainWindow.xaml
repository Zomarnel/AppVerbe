<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AppVerbe.ViewModels;assembly=AppVerbe.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:AppSession}"
        mc:Ignorable="d"
        FontSize="11pt"
        Title="MainWindow" Height="500" Width="600">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Buttons-->
        <Grid Grid.Row="1"
              Background="LightGreen">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0"
                    BorderThickness="1" BorderBrush="Black">
                
                <Button Content="Load List"
                        Grid.Column="0" Grid.Row="1"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="LoadGame_OnClick"
                        Focusable="False"/>
                
            </Border>
            
            <Border Grid.Row="0" Grid.Column="1"
                    BorderThickness="1" BorderBrush="Black">
                
                <Button Content="Save List"
                        Grid.Column="1" Grid.Row="1"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="SaveGame_OnClick"
                        Focusable="False"/>
                
            </Border>
            
            <Border Grid.Row="1" Grid.Column="0"
                    BorderThickness="1" BorderBrush="Black">
                
                <Button Content="Add Verb"
                        Grid.Column="0" Grid.Row="2"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="AddNewVerb_OnClick"
                        Focusable="False"/>
                
            </Border>
            
            <Border Grid.Row="1" Grid.Column="1"
                    BorderThickness="1" BorderBrush="Black">
                
                <Button Content="Random Verb"
                        Grid.Column="1" Grid.Row="2"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="RandomVerb_OnClick"
                        Focusable="False"/>
                
            </Border>
        </Grid>
        
        <!--Labels-->
        <Label Content="Menu" Background="AliceBlue"  Grid.Row="0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
    
