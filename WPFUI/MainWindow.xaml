<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AppVerbe.ViewModels;assembly=AppVerbe.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:AppSession}"
        mc:Ignorable="d"
        FontSize="11pt"
        Title="MainWindow" Height="500" Width="615">

    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bdr" CornerRadius="220" Margin="5" BorderThickness="1" BorderBrush="Black" Background="#30C5FF">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="LightBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Label Content="VERBEAPP created by ME" Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="DemiBold" Background="LightCoral"/>
        <Label Content="VERBEAPP created by ME" Grid.Row="2" HorizontalContentAlignment="Center" FontWeight="DemiBold" Background="LightCoral"/>

        <Border Grid.Row="1" Background="LightGoldenrodYellow"/>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center">
            <Button Content="Button 1" Click="LoadGame_OnClick" Height="150" Width="150" VerticalAlignment="Center"/>
            <Button Content="Button 2" Click="SaveGame_OnClick" Height="150" Width="150" VerticalAlignment="Center"/>
            <Button Content="Button 3" Click="AddNewVerb_OnClick" Height="150" Width="150" VerticalAlignment="Center"/>
            <Button Content="Button 4" Click="RandomVerb_OnClick" Height="150" Width="150" VerticalAlignment="Center"/>
        </StackPanel>

    </Grid>
</Window>
    
